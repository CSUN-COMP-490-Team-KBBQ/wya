{
  "name": "api",
  "private": true,
  "engines": {
    "node": "14"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=development webpack",
    "build:production": "cross-env NODE_ENV=production webpack",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "echo testing api",
    "deploy": "npm run build && firebase deploy --project=development --only functions",
    "deploy:prod": "npm run build:prod && firebase deploy --project=production --only functions",
    "lint": "eslint src --fix",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "dev": "echo dev functions"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/nodemailer": "^6.4.4",
    "@types/uuid": "^8.3.4",
    "config": "*",
    "cross-env": "^7.0.3",
    "dotenv-webpack": "^7.1.0",
    "firebase-functions-test": "^0.3.3",
    "ts-loader": "^9.2.8",
    "tsconfig": "*",
    "typescript": "^4.6.3",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.19.0",
    "moment": "^2.29.1",
    "nodemailer": "^6.7.3",
    "uuid": "^8.3.2"
  }
}
