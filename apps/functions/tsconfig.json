{
  "include": ["src"],
  "exclude": ["node_modules"],
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2017",
    "lib": ["ES2021"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true
  }
}
