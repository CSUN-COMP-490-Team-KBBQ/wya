{
  "include": ["src"],
  "exclude": ["node_modules"],
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2017",
    "lib": ["ES2021"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  }
}
